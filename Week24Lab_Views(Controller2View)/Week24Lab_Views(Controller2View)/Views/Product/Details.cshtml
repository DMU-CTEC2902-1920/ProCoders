@model Week24Lab_Views_Controller2View_.Models.CustomerProductViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Product/_CustomerProductLayout.cshtml";
}

@section Customer{
<h2>Customer info:</h2>
<p><strong>First Name:</strong> @Model.Customer.FirstName</p>
<p><strong>First Name:</strong>@Model.Customer.LastName</p>
}

@section Product{
