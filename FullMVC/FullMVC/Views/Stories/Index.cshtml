@model IEnumerable<FullMVC.Models.Story>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> @Html.DisplayNameFor(model => model.StoryId)</th>
        <th> @Html.DisplayNameFor(model => model.Author.FirstName)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.ToList)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StoryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.StoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StoryId })
            </td>
        </tr>
    }

</table>
